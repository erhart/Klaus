  <div class="field">
    <%= f.label :semester %><br />
    <%= f.text_field :semester %>
	<%= f.select :semester_id, Semester.all.collect { |p| [ p.name, p.id ] } %>
  </div>
  <div class="field">
    <%= f.label :prof %><br />
    <%= f.text_field :prof %>
    <%= f.select :prof_id, Prof.all.collect { |p| [ p.name, p.id ] } %>
  </div>
  <div class="field">
    <%= f.label :doc_type %><br />
    <%= f.text_field :doc_type %>
    <%= f.select :doc_type_id, Doc_type.all.collect { |p| [ p.name, p.id ] } %>
  </div>
